---
import cn from 'mxcn';

interface Props {
  title: string;
  isReverse?: boolean;
  id?: string;
}

const { title, isReverse } = Astro.props as Props;
---
<section id={Astro.props.id} class={cn(
    'flex items-center justify-between px-4 md:px-8 py-4 md:py-8 h-full',
    isReverse ? 'flex-row-reverse' : 'flex-row',
    )}>
    <div class={cn(
        'title w-1/3',
        isReverse ? 'text-right' : 'text-left',
    )}>
        <h2 class="text-6xl">{title}</h2>
    </div>
    <div class="vertical-line"></div>
    <div class="content w-2/3">
        <slot />
    </div>
</section>