<script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    gsap.registerPlugin(ScrollTrigger);

    // Animate each .horizontal-line individually
    document.querySelectorAll('.horizontal-line').forEach((el) => {
        gsap.fromTo(
            el,
            { scaleX: 0 },
            {
                scaleX: 1,
                duration: 2,
                ease: "power2.inOut",
                scrollTrigger: {
                    trigger: el,
                    start: "top 90%",
                    toggleActions: "play none none none",
                }
            }
        );
    });

    // Animate each .vertical-line individually
    document.querySelectorAll('.vertical-line').forEach((el) => {
        gsap.fromTo(
            el,
            { scaleY: 0 },
            {
                scaleY: 1,
                duration: 2,
                ease: "power2.inOut",
                scrollTrigger: {
                    trigger: el,
                    start: "top 90%",
                    toggleActions: "play none none none",
                }
            }
        );
    });
</script>
